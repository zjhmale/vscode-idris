{
  "name": "vscode-idris",
  "displayName": "idris Syntax Highlighting",
  "description": "Syntax highlighting and snippets for the idris programming language.",
  "version": "1.0.0",
  "publisher": "zjhmale",
  "engines": {
    "vscode": "^0.10.1"
  },
  "icon": "images/idris.png",
  "galleryBanner": {
    "color": "#00ff99",
    "theme": "light"
  },
  "keywords": [
    "language",
    "idris",
    "highlight",
    "syntax",
    "snippets"
  ],
  "license": "BSD",
  "homepage": "https://github.com/zjhmale/vscode-idris",
  "repository": {
    "type": "git",
    "url": "https://github.com/zjhmale/vscode-idris.git"
  },
  "bugs": {
    "url": "https://github.com/zjhmale/vscode-idris/issues",
    "email": "zjhmale@gmail.com"
  },
  "categories": [
    "Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:idris"
  ],
  "main": "./src/extension",
  "contributes": {
    "languages": [{
      "id": "idris",
      "aliases": [
        "Idris",
        "idris"
      ],
      "extensions": [
        ".idr",
        ".lidr"
      ],
      "configuration": "./configs/idris.json"
    }, {
      "id": "ipkg",
      "aliases": [
        "Ipkg",
        "ipkg"],
      "extensions": [
        ".ipkg"
      ]
    }],
    "grammars": [{
      "language": "idris",
      "scopeName": "source.idris",
      "path": "./syntaxes/idris.tmLanguage"
    }, {
      "language": "ipkg",
      "scopeName": "source.ipkg",
      "path": "./syntaxes/ipkg.tmLanguage"
    }],
    "commands": [{
      "command": "idris.typecheck",
      "title": "Idris: Typecheck File"
    }, {
      "command": "idris.type-of",
      "title": "Idris: Type of Identifier"
    }, {
      "command": "idris.docs-for",
      "title": "Idris: Docs for Identifier"
    }, {
      "command": "idris.print-definition",
      "title": "Idris: Definition of Identifier"
    }, {
      "command": "idris.show-holes",
      "title": "Idris: List the currently active holes"
    }, {
      "command": "idris.add-clause",
      "title": "Idris: Generate an initial pattern match clause"
    }, {
      "command": "idris.case-split",
      "title": "Idris: Generate a case split for the pattern variable"
    }, {
      "command": "idris.proof-search",
      "title": "Idris: Attempt to fill out the holes by proof search"
    }, {
      "command": "idris.run-repl",
      "title": "Idris: Eval current line"
    }],
    "keybindings": [{
      "key": "shift+ctrl+l",
      "mac": "shift+cmd+l",
      "command": "idris.typecheck"
    }, {
      "key": "shift+ctrl+o",
      "mac": "shift+cmd+o",
      "command": "idris.type-of"
    }, {
      "key": "shift+ctrl+d",
      "mac": "shift+cmd+d",
      "command": "idris.docs-for"
    }, {
      "key": "shift+ctrl+f",
      "mac": "shift+cmd+f",
      "command": "idris.print-definition"
    }, {
      "key": "shift+ctrl+h",
      "mac": "shift+cmd+h",
      "command": "idris.show-holes"
    }, {
      "key": "shift+ctrl+a",
      "mac": "shift+cmd+a",
      "command": "idris.add-clause"
    }, {
      "key": "shift+ctrl+c",
      "mac": "shift+cmd+c",
      "command": "idris.case-split"
    }, {
      "key": "shift+ctrl+s",
      "mac": "shift+cmd+s",
      "command": "idris.proof-search"
    }, {
      "key": "shift+ctrl+r",
      "mac": "shift+cmd+r",
      "command": "idris.run-repl"
    }],
    "snippets": [{
      "language": "idris",
      "path": "./snippets/idris.json"
    }]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "bennu": "17.3.0",
    "nu-stream": "3.3.1",
    "rx-lite": "4.0.0"
  },
  "devDependencies": {
    "eslint": "^3.4.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "vscode": "^0.11.0"
  }
}
